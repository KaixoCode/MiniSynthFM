{
  
  // ------------------------------------------------

  theme-name: Default
  
  // ------------------------------------------------

  variables: {
    
    // ------------------------------------------------
    
    $selection-color: [ 255, 255, 255, 50 ]
    $text-light: [ 216, 216, 214 ]
    $text-light-dark: [ 186, 186, 184 ]
    $text-dark: [ 156, 156, 154 ]
    $display-color: [150, 150, 148]

    // ------------------------------------------------

    $text-area: {
      font: $main-font
      text-color: $text-light
      placeholder-color: $text-light-dark
      selection-color: $selection-color
      caret-color: $text-light
    }

    // ------------------------------------------------
    
    $main-text: {
      font: $main-font
      text-position: [ 0, 2 ]
      text-color: $text-light
    }
    
    $display-text: {
      font: $main-font
      text-position: [ 0, 2 ]
      text-color: $display-color
    }
    
    $dark-text: {
      extends: $main-text
      text-color: $text-dark
    }

    // ------------------------------------------------

    $text-button: {
      extends: $dark-text

      hovering: {
        text-color: $text-light
      }
    }

    $text-toggle: {
      extends: $dark-text

      selected: {
        text-color: $text-light
      }
    }

    // ------------------------------------------------

    $light-button: {
      extends: $main-text
      
      background-color: {
        transition: 50
        color: [ 89, 89, 89 ]
        selected: [ 117, 117, 115 ]
        hovering: [ 117, 117, 115 ]
      }

      text-color: {
        transition: 50
        color: $text-dark
        selected: $text-light
      }
    }

    $dark-button: {
      extends: $main-text
      
      background-color: {
        transition: 50
        color: [ 40, 40, 40 ]
        selected: [ 48, 48, 48 ]
        hovering: [ 48, 48, 48 ]
      }

      text-color: {
        transition: 50
        color: $text-dark
        selected: $text-light
      }
    }

    // ------------------------------------------------

    // Little base class for easy modification of knobs
    $knob: {}

    // ------------------------------------------------

    $main-knob: {
      extends: $knob

      layers: {
        background: {
          image: {
            source: knobs/main-knob-bg.png
            position: [ 8, 1 ]
            frames: 22
            size: [ 47, 38 ]
          }
        }
        main: {
          image: {
            source: knobs/main-knob.png
            frames: 181
            frames-per-row: 10
            size: [ 27, 27 ]
            position: [ 18, 11 ]
          }
        }
        name: {
          text: {
            font: $main-font
            color: $text-dark
            content: "$short-name"
            position: [ 0, 22 ]
            align: center
          }

          hovering: {
            text: "$value"
          }
        }
      }
    }

    $main-knob-bi: {
      extends: $main-knob 

      layers: {
        background: {
          image: {
            source: knobs/main-knob-bg-bi.png
            frames: 21
          }
        }
      }
    }

    $basic-waveform-knob: { 
      extends: $main-knob

      layers: {
        background: {
          image: { 
            source: knobs/waveforms.png
            frames: 4
            size: [ 64, 64 ]
            position: [0, 0]
          }
        }
      }
    }

    // ------------------------------------------------
    
    $slider: {
      extends: $knob
      
      layers: {
        background: {
          image: {
            source: knobs/main-slider-bg.png
            position: [ 17, 9 ]
          }
        }
        main: {
          image: {
            source: knobs/main-slider.png
            frames: 90
            frames-per-row: 90
            size: [ 43, 107 ]
            position: [ 9, 5 ]
          }
        }
        name: {
          text: {
            font: $main-font
            color: $text-dark
            content: $short-name
            position: [ 0, 60 ]
            align: center 
          }

          hovering: {
            text: $value
          }
        }
      }
    }

    $toggle: {
      extends: $knob

      layers: {
        toggle: {
          image: {
            source: knobs/toggle.png
            size: [ 29, 19 ]
            position: [ 0, 2 ]
          }

          selected: {
            image-offset: [0, 19]
          }
        }

        name: {
          text: {
            font: $main-font
            color: $text-dark
            content: "$short-name" 
            position: [ 34, 6 ]
            align: top-left
          }
        }
      }
    }

    $vertical-toggle: {
      extends: $knob

      layers: {
        toggle: {
          image: {
            source: knobs/toggle.png
            size: [ 29, 19 ]
            position: [ 17, 3 ]
          }

          selected: {
            image-offset: [0, 19]
          }
        }

        name: {
          text: {
            font: $main-font
            color: $text-dark
            content: "$short-name" 
            position: [ 0, 13 ]
            align: center
          }
        }
      }
    }

    $threeway-toggle: {
      extends: $toggle

      layers: {
        toggle: {
          image: {
            source: knobs/threeway-toggle.png
            frames: 3
          }
        }
      }
    }

    // ------------------------------------------------

    $main-font: {
      map: fonts/map.png
      description: fonts/map.json
    }

    // ------------------------------------------------

    $led: {
      image: {
        source: knobs/led.png
        frames: 100
        frames-per-row: 10
        size: [ 13, 13 ]
      }
    }

    // ------------------------------------------------

    $jack: {
      layers: {
        jack: {
          image: {
            source: knobs/jack.png
            position: [ 21, 4 ]
          }
        }

        name: {
          text: {
            content: $text
            font: $main-font
            color: $text-dark
            align: center
            position: [0, 16]
          }
        }
      }
    }

    $output-jack: {
      extends: $jack
      
      layers: {
        name: {
          text: {
            color: [37, 37, 37]
          }

          image: {
            source: knobs/out-jack-text-background.png
            position: [12, 32]
            size: [40, 15]
          }
        }
      }
    }

    // ------------------------------------------------

    $basic-button: {
      extends: $display-text

      image-edges: [2, 2, 2, 2]

      hovering: {
        image: button-hover.png
      }

      text-align: center-left
    }

    $basic-button-select: {
      extends: $basic-button

      selected: {
        image: button-hover.png
      }
    }

    // ------------------------------------------------

    $display-text-area: {
      extends: $text-area

      text-color: $display-color
      caret-color: $display-color
      placeholder-color: {
        value: $display-color
        focused: [0, 0, 0, 0]
      }

      background: {
        image-edges: [2, 2, 2, 2]

        image: button-underline.png

        focused: {
          image: button-hover.png
        }
      }
    }
    
    // ------------------------------------------------

  }

  // ------------------------------------------------

  font: $main-font
  font-small: $small-font 

  // ------------------------------------------------

  background: background.png

  // ------------------------------------------------

  tooltip: {
    background: {
      image: tooltip.png
      edges: [ 4, 4, 4, 4 ]
    }
    font: $main-font
    text-color: $text-light
  }

  // ------------------------------------------------

  scrollbar: {
    background-color: [ 102, 102, 100 ]

    hovering: { background-color: [ 112, 112, 111 ] }
  }

  // ------------------------------------------------

  slider: $slider
  knob: $main-knob
  knob-bi: $main-knob-bi

  waveform-knob1: $basic-waveform-knob

  led: $led
  toggle: $toggle
  threeway-toggle: $threeway-toggle

  output-jack: $output-jack
  input-jack: $jack

  // ------------------------------------------------

  cables: {
    cable1: {
      end: knobs/cable1.png
      color: [214, 92, 92]
    }

    cable2: {
      end: knobs/cable2.png
      color: [214, 181, 92]
    }

    cable3: {
      end: knobs/cable3.png
      color: [99, 214, 92]
    }

    cable4: {
      end: knobs/cable4.png
      color: [92, 158, 214]
    }

    cable5: {
      end: knobs/cable5.png
      color: [140, 92, 214]
    }
  }

  // ------------------------------------------------

  piano: {
    white-key: {
      background-color: {
        value: [211, 211, 211]
        transition: 50
        
        hovering: [180, 180, 180]
        pressed: [150, 150, 150]
      }
    }

    black-key: {
      background-color: {
        value: [22, 22, 22] 
        transition: 50

        hovering: [40, 40, 40]
        pressed: [60, 60, 60]
      }
    }    
  }

  text: $text-area

  led-text: {
    extends: $text-area

    text-color: $display-color
    caret-color: $display-color
    placeholder-color: {
      value: $display-color
      focused: [0, 0, 0, 0]
      transition: 1
    }

    background: {
      image-edges: [2, 2, 2, 2]

      image: button-underline.png

      focused: {
        image: button-hover.png
      }
    }
    
  }

  // ------------------------------------------------

  envelope: {
    led: $led

    parameters: {
      loop: $toggle
      level: $main-knob
      attack: $slider
      decay: $slider
      sustain: $slider
      release: $slider
    }

    jacks: {
      output: $output-jack
    }
  }

  // ------------------------------------------------

  delay: {
    parameters: {
      time: $main-knob
      tempo: $main-knob
      feedback: $main-knob
      mix: $main-knob
      synced: $vertical-toggle
      pingpong: $toggle
    }
  }

  // ------------------------------------------------

  gain: {
    led: $led

    parameters: {
      gate: $vertical-toggle
      level: $main-knob
      attack: $main-knob
      decay: $main-knob
    }

    jacks: {
      output: $output-jack
    }
  }

  // ------------------------------------------------

  lfo: {
    led: $led
    
    parameters: {
      frequency: $main-knob
      depth: $main-knob
      synced: $vertical-toggle
      tempo: $main-knob
      waveform: $main-knob
    }

    jacks: {
      depth: $jack
      output: $output-jack
    }
  }

  // ------------------------------------------------

  filter: {
    parameters: {
      keytrack: $toggle
      cutoff: $main-knob
      resonance: $main-knob
      drive: $main-knob
    }

    jacks: {
      cutoff: $jack
    }
  }

  // ------------------------------------------------

  oscillator: {
    parameters: {
      volume: $main-knob-bi
      tune: $main-knob-bi
      octave: $threeway-toggle
      waveform: $basic-waveform-knob
      fm: $main-knob
      output: $toggle
    }

    jacks: {
      output: $output-jack
      fm: $jack
      amount: $jack
      sync: $jack
    }
  }

  // ------------------------------------------------

  display: {
    popup: {
      background: {
        image: popup-background.png
      }

      back-button: {
        extends: $basic-button
        text: Cancel
        text-align: center
      }

      confirm-button: {
        extends: $basic-button
        text: Confirm
        text-align: center
      }

      message: $display-text-area
    }

    main: {
      background: main-tab-background.png
      button: {
        image: tabs.png
        image-offset: [80, 0]

        selected: {
          image-offset: [80, 40]          
        }
      }

      preset-name: $display-text-area
      description: $display-text-area
    }

    load-preset: {
      background: load-preset-background.png
      button: {
        image: tabs.png
        image-offset: [40, 0]

        selected: {
          image-offset: [40, 40]          
        }
      }

      preset: {
        background-color: { 
          value: [255, 255, 255, 10]
          transition: 100
          hovering: [255, 255, 255, 40]
        }

        extends: $main-text
        text: $text
        text-position: [10, 2]
        text-align: center-left
      }

      bank: {
        background-color: {
          value: [255, 255, 255, 10]
          transition: 100
          hovering: [255, 255, 255, 40]
        }

        extends: $main-text
        text: $text
        text-position: [5, 2]
        text-align: center-left
      }
    }

    save-preset: {
      background: save-preset-background.png
      button: {
        image: tabs.png
        image-offset: [0, 0]

        selected: {
          image-offset: [0, 40]          
        }
      }

      save-button: {
        extends: $basic-button
        text: Save Preset
        text-align: center
      }

      name: $display-text-area
      author: $display-text-area
      type: $display-text-area
      description: $display-text-area
    }

    settings: {
      background: settings-background.png
      button: {
        image: tabs.png
        image-offset: [120, 0]

        selected: {
          image-offset: [120, 40]          
        }
      }

      zoom-button: {
        extends: $basic-button-select
        text: ["0.5x", "0.7x", "1.0x"]
        text-position: [5, 2]
      }

      default-theme: {
        extends: $basic-button
        text: Default Theme
        text-position: [90, 2]
      }

      reload-theme: {
        extends: $basic-button
        text: Reload Theme
        text-position: [90, 2]

        image: button-underline.png
      }

      theme-path: {
        extends: $basic-button
        text: Theme Path
        text-position: [5, 2]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [90, 2]
          }
        }
      }

      preset-path: {
        extends: $basic-button
        text: Preset Path
        text-position: [5, 2]

        image: button-underline.png

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [90, 2]
          }
        }
      }
      
      touch-mode: {
        extends: $basic-button
        text: Touch Mode
        text-position: [5, 2]

        image: button-underline.png

        layers: {
          path: {
            extends: $display-text
            text: Disabled
            text-overflow: dots
            text-align: center-left
            text-position: [90, 2]

            selected: {
              text: Enabled
            }
          }
        }
      }
    }
  }
}
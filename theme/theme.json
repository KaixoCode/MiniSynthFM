{
  
  // ------------------------------------------------

  theme-name: Default
  
  // ------------------------------------------------

  variables: {
    
    // ------------------------------------------------
    
    $knob-img: knob.png
    $knob-bg-img: knob-bg.png
    $knob-bg-bi: knob-bg-bi.png
    $basic-waveforms: basic-waveforms.png
    $lfo-waveforms: lfo-waveforms.png
    $slider-img: slider.png
    $slider-bg-img: slider-bg.png
    $jack-img: jack.png
    $out-jack-bg: out-jack-text-background.png
    $wheel-img: wheel.png

    // ------------------------------------------------
    
    $selection-color: [ 255, 255, 255, 50 ]
    $text-color: [ 156, 156, 154 ]
    $text-color-inv: [ 37, 37, 37 ]
    $display-color: [150, 150, 148]

    // ------------------------------------------------

    $main-text: {
      font: $main-font
      text-color: $text-color
    }

    $display-text: {
      font: $main-font
      text-position: [ 0, 1 ]
      text-color: $display-color
    }
    
    // ------------------------------------------------

    $display-text-area: {
      extends: $display-text
      caret-color: $display-color
      selection-color: $selection-color
      placeholder-color: {
        value: $display-color
        focused: [0, 0, 0, 0]
      }

      background: {
        image: {
          source: button-underline.png
          focused: button-hover.png
        }
        image-edges: [2, 2, 2, 2]
      }
    }
    
    // ------------------------------------------------
    
    $name-value: {
      extends: $main-text
      text: {
        content: $short-name
        hovering: $value
      }
    }

    // ------------------------------------------------

    // Little base class for easy modification of knobs
    $knob: {}

    // ------------------------------------------------

    $main-knob: {
      extends: $knob

      layers: {
        background: {
          image: $knob-bg-img
          frames: 22
          image-position: [ 8, 1 ]
          image-size: [ 47, 38 ]
        }
        main: {
          image: $knob-img
          frames: 46
          frames-per-row: 7
          image-size: [ 27, 27 ]
          image-position: [ 18, 11 ]
        }
        name: {
          extends: $name-value
          text-position: [ 0, 22 ]
          text-align: center
        }
      }
    }

    $main-knob-bi: {
      extends: $main-knob 

      layers: {
        background: {
          image: $knob-bg-bi
          frames: 21
        }
      }
    }

    $basic-waveform-knob: { 
      extends: $main-knob

      layers: {
        background: {
          image: $basic-waveforms
          frames: 4
          image-size: [64, 64]
          image-position: [0, 0]
        }
      }
    }

    $lfo-waveform-knob: { 
      extends: $basic-waveform-knob

      layers: {
        background: {
          image: $lfo-waveforms
          frames: 6
        }
      }
    }

    // ------------------------------------------------
    
    $slider: {
      extends: $knob
      
      layers: {
        background: {
          image: $slider-bg-img
          image-position: [ 17, 9 ]
        }
        main: {
          image: $slider-img
          frames: 90
          frames-per-row: 90
          image-size: [ 43, 107 ]
          image-position: [ 9, 5 ]
        }
        name: {
          extends: $name-value
          text-position: [ 0, 60 ]
          text-align: center 
        }
      }
    }

    $toggle: {
      extends: ["$knob", "$main-text"]

      text: $short-name
      text-position: [ 34, 6 ]
      text-align: top-left
      image: toggle.png
      image-size: [ 29, 19 ]
      image-position: [ 0, 2 ]

      selected: {
        image-offset: [0, 19]
      }
    }

    $vertical-toggle: {
      extends: $toggle

      text-position: [ 0, 13 ]
      text-align: center
      image-position: [ 17, 3 ]
    }

    $threeway-toggle: {
      extends: $toggle

      image: threeway-toggle.png
      frames: 3
    }

    // ------------------------------------------------

    $main-font: {
      map: map.png
      description: map.json
    }

    // ------------------------------------------------

    $led: {
      image: led.png
      frames: 100
      frames-per-row: 10
      image-size: [ 13, 13 ]
    }

    // ------------------------------------------------

    $jack: {
      image: $jack-img
      image-position: [ 21, 4 ]

      layers: {
        name: {
          extends: $main-text
          text: $name
          text-align: center
          text-position: [0, 16]
        }
      }
    }

    $output-jack: {
      extends: $jack

      layers: {
        background: {
          image: $out-jack-bg
          image-position: [12, 32]
          image-size: [40, 15]
        }
        name: {
          text-color: $text-color-inv
        }
      }
    }

    // ------------------------------------------------

    $basic-button: {
      extends: $display-text

      image-edges: [2, 2, 2, 2]

      hovering: {
        image: button-hover.png
      }

      text-align: center-left
    }

    $basic-button-select: {
      extends: $basic-button

      selected: {
        image: button-hover.png
      }
    }

    $basic-button-focus: {
      extends: $basic-button

      focused: {
        image: button-hover.png
      }
    }

    // ------------------------------------------------

    $settings-entry: {
      extends: $basic-button
      text-position: [5, 1]
      
      layers: {
        value: {
          extends: $display-text
          text: $value
          text-align: center-left
          text-position: [90, 1]
        }
      }
    }

    // ------------------------------------------------

    $wheel: {
      image: $wheel-img
      frames: 100
      frames-per-row: 100
      image-size: [35, 145]
    }

    // ------------------------------------------------

  }

  // ------------------------------------------------

  background: background.png
  background-no-piano: background-no-piano.png

  info-background: info-background.png
  info-background-no-piano: info-background-no-piano.png

  // ------------------------------------------------

  cables: {
    cable1: {
      end: cable1.png
      color: [214, 92, 92]
    }

    cable2: {
      end: cable2.png
      color: [214, 181, 92]
    }

    cable3: {
      end: cable3.png
      color: [99, 214, 92]
    }

    cable4: {
      end: cable4.png
      color: [92, 158, 214]
    }

    cable5: {
      end: cable5.png
      color: [140, 92, 214]
    }
  }

  // ------------------------------------------------

  piano: {
    white-key: {
      background-color: {
        value: [211, 211, 211]
        hovering: [180, 180, 180]
        pressed: [150, 150, 150]
        transition: 50
      }
    }

    black-key: {
      background-color: {
        value: [22, 22, 22] 
        hovering: [40, 40, 40]
        pressed: [60, 60, 60]
        transition: 50
      }
    }

    mod-wheel: $wheel
    pitch-wheel: $wheel
  }

  // ------------------------------------------------

  envelope: {
    led: $led

    parameters: {
      loop: $toggle
      level: $main-knob
      attack: $slider
      decay: $slider
      sustain: $slider
      release: $slider
    }

    jacks: {
      output: $output-jack
    }
  }

  // ------------------------------------------------

  delay: {
    parameters: {
      time: $main-knob
      tempo: $main-knob
      feedback: $main-knob
      mix: $main-knob
      synced: $vertical-toggle
      pingpong: $toggle
    }
  }

  // ------------------------------------------------

  gain: {
    led: $led

    parameters: {
      gate: $vertical-toggle
      level: $main-knob
      attack: $main-knob
      decay: $main-knob
    }

    jacks: {
      output: $output-jack
    }
  }

  // ------------------------------------------------

  lfo: {
    led: $led
    
    parameters: {
      frequency: $main-knob
      depth: $main-knob
      synced: $vertical-toggle
      tempo: $main-knob
      waveform: $lfo-waveform-knob
    }

    jacks: {
      depth: $jack
      output: $output-jack
    }
  }

  // ------------------------------------------------

  filter: {
    parameters: {
      keytrack: $toggle
      cutoff: $main-knob
      resonance: $main-knob
      drive: $main-knob
    }

    jacks: {
      cutoff: $jack
    }
  }

  // ------------------------------------------------

  oscillator: {
    parameters: {
      volume: $main-knob-bi
      tune: $main-knob-bi
      octave: $threeway-toggle
      waveform: $basic-waveform-knob
      fm: $main-knob
      output: $toggle
    }

    jacks: {
      output: $output-jack
      fm: $jack
      amount: $jack
      mod: $jack
    }
  }

  // ------------------------------------------------

  midi: {
    mod-wheel-led: $led
    velocity-led: $led
    random-led: $led

    parameters: {
      mod-wheel-amount: $main-knob
      velocity-amount: $main-knob
      random-amount: $main-knob
    }

    jacks: {
      mod-wheel: $output-jack
      velocity: $output-jack
      random: $output-jack
    }
  }

  // ------------------------------------------------

  display: {
    
    // ------------------------------------------------

    popup: {
      background: popup-background.png

      back-button: {
        extends: $basic-button
        text: Cancel
        text-align: center
      }

      confirm-button: {
        extends: $basic-button
        text: Confirm
        text-align: center
      }

      message: $display-text-area
    }

    // ------------------------------------------------

    main: {
      foreground: main-tab-foreground.png
      background: display-background.png
      button: {
        extends: $basic-button-select
        layers: {
          img: {
            image: tabs.png
            image-offset: [80, 0]
          }
        }
      }

      save-button: {
        extends: $basic-button-select
        layers: {
          img: {
            image: save-button.png
          }
        }
      }

      next-preset: {
        extends: $basic-button
        layers: {
          img: {
            image: next-preset.png
          }
        }
      }
      
      previous-preset: {
        extends: $basic-button
        layers: {
          img: {
            image: previous-preset.png
          }
        }
      }
      
      preset-name: $display-text-area
      description: $display-text-area
    }

    // ------------------------------------------------

    load-preset: {
      background: load-preset-background.png
      button: {
        extends: $basic-button-select
        layers: {
          img: {
            image: tabs.png
            image-offset: [40, 0]
          }
        }
      }

      search: $display-text-area

      scrollbar: {
        background-color: $display-color
      }

      bank-tab: {
        extends: $basic-button-select
        layers: {
          icon: {
            image: filters.png
            image-offset: [0, 0]
          }
        }
      }

      type-tab: {
        extends: $basic-button-select
        layers: {
          icon: {
            image: filters.png
            image-offset: [0, 20]
          }
        }
      }

      author-tab: {
        extends: $basic-button-select
        layers: {
          icon: {
            image: filters.png
            image-offset: [0, 40]
          }
        }
      }

      preset: {
        extends: $basic-button-focus
        text: $name
        text-overflow: dots
        text-position: [5, 1]
        text-align: center-left
      }

      bank: {
        extends: $basic-button-select
        text: $name
        text-overflow: dots
        text-position: [5, 1]
        text-align: center-left
      }

      sort-button: {
        extends: $basic-button

        image: button-underline.png

        layers: {
          icon: {
            image: sort.png
            selected: {
              image-offset: [0, 20]
            }
          }
        }
      }
    }

    // ------------------------------------------------

    save-preset: {
      background: display-background.png

      button: {
        extends: $basic-button-select
        layers: {
          img: {
            image: tabs.png
            image-offset: [0, 0]
          }
        }
      }

      save-button: {
        extends: $basic-button
        text: Save Preset
        text-align: center
      }

      cancel-button: {
        extends: $basic-button
        text: Cancel
        text-align: center
      }

      name: $display-text-area
      author: $display-text-area
      type: $display-text-area
      description: $display-text-area
    }

    // ------------------------------------------------

    settings: {
      background: display-background.png
      button: {
        extends: $basic-button-select
        layers: {
          img: {
            image: tabs.png
            image-offset: [120, 0]
          }
        }
      }

      zoom-button: {
        extends: $basic-button

        image: button-underline.png
        
        text: Zoom
        text-position: [5, 1]
        layers: {
          level: {
            extends: $display-text
            text: ["50%", "70%", "100%", "150%", "200%"]
            text-align: center-left
            text-position: [90, 1]
          }
        }
      }

      default-theme: {
        extends: $basic-button
        text: Default Theme
        text-position: [90, 1]
      }

      reload-theme: {
        extends: $basic-button
        text: Reload Theme
        text-position: [ 90, 1 ]
        
        image: button-underline.png
      }

      theme-path: {
        extends: $basic-button
        text: Theme
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [90, 1]
          }
        }
      }

      preset-path: {
        extends: $basic-button
        text: Preset Path
        text-position: [5, 2]
        
        image: button-underline.png
        
        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [90, 1]
          }
        }
      }
      
      touch-mode: {
        extends: $basic-button
        text: Touch Mode
        text-position: [5, 1]
        
        image: button-underline.png
        
        layers: {
          path: {
            extends: $display-text
            text: Disabled
            text-overflow: dots
            text-align: center-left
            text-position: [90, 1]

            selected: {
              text: Enabled
            }
          }
        }
      }
      
      show-piano: {
        extends: $basic-button
        text: Show Piano
        text-position: [5, 1]
        
        image: button-underline.png
        
        layers: {
          path: {
            extends: $display-text
            text: Hide
            text-overflow: dots
            text-align: center-left
            text-position: [90, 1]

            selected: {
              text: Show
            }
          }
        }
      }

      cable-physics: {
        extends: $basic-button
        text: Cable Physics
        text-position: [5, 1]
        
        image: button-underline.png
        
        layers: {
          path: {
            extends: $display-text
            text: Disable
            text-overflow: dots
            text-align: center-left
            text-position: [90, 1]

            selected: {
              text: Enable
            }
          }
        }
      }

      global-title: {      
        extends: $display-text

        text: Global Settings

        image-edges: [2, 2, 2, 2]
        image: button-underline.png
      }
      
      preset-title: {      
        extends: $display-text

        text: Preset Settings

        image-edges: [2, 2, 2, 2]
        image: button-underline.png
      }
      
      midi-title: {      
        extends: $display-text

        text: MIDI Settings

        image-edges: [2, 2, 2, 2]
        image: button-underline.png
      }

      info-title: {      
        extends: $display-text

        text: General Info

        image-edges: [2, 2, 2, 2]
        image: button-underline.png
      }
      
      back-button: {
        extends: $basic-button
        text: Back
        text-position: [22, 2]
        layers: {
          back: {
            image: previous-preset.png
            image-position: [1, 0]
          }
        }
      }
      
      preset-settings: {
        extends: $basic-button
        text: Preset Settings
        text-position: [5, 1]
      }
      
      midi-settings: {
        extends: $basic-button
        text: MIDI Settings
        text-position: [5, 1]
      }
      
      global-settings: {
        extends: $basic-button
        text: Global Settings
        text-position: [5, 1]
      }
      
      general-info: {
        extends: $basic-button
        text: General Information
        text-position: [5, 1]
      }
      
      sample-rate: {
        extends: $basic-button
        text: Sample Rate
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [95, 1]
          }
        }
      }

      cpu-usage: {
        extends: $basic-button
        text: CPU Usage
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [95, 1]
          }
        }
      }

      simd-optimizations: {
        extends: $basic-button
        text: Optimizations
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [95, 1]
          }
        }
      }

      version: {
        extends: $basic-button
        text: Version
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [95, 1]
          }
        }
      }

      active-voices: {
        extends: $basic-button
        text: Active Voices
        text-position: [5, 1]

        layers: {
          path: {
            extends: $display-text
            text: $text
            text-overflow: dots
            text-align: center-left
            text-position: [95, 1]
          }
        }
      }

      parameters: {
        quality: {
          extends: $settings-entry
          text: Quality
        }

        noisy-filter: {
          extends: $settings-entry
          text: Noisy Filter
        }

        glide: {
          extends: $settings-entry
          text: Glide
        }

        always-glide: {
          extends: $settings-entry
          text: Always Glide
          image: button-underline.png
        }

        monophonic: {
          extends: $settings-entry
          text: Monophonic
        }

        delay-algorithm: {
          extends: $settings-entry
          text: Delay Alg
          image: button-underline.png
        }
        
        velocity-to-gain: {
          extends: $settings-entry
          text: Vel to Gain
          image: button-underline.png
        }
        
        export-quality: {
          extends: $settings-entry
          text: Export
          image: button-underline.png
        }
        
        phase-mode: {
          extends: $settings-entry
          text: Phase
          image: button-underline.png
        }
        
        pitch-bend-range: {
          extends: $settings-entry
          text: $short-name
          image: button-underline.png
        }
        
        operator1-mod-type: {
          extends: $settings-entry
          text: $short-identifier
        }
        
        operator2-mod-type: {
          extends: $settings-entry
          text: $short-identifier
        }

        operator3-mod-type: {
          extends: $settings-entry
          text: $short-identifier
          image: button-underline.png
        }
      }
    }
    
    // ------------------------------------------------

  }
  
  // ------------------------------------------------

}